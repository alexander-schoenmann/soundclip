<div id="registrationForm">
    <form id="register-form">
        <h2>Registration</h2>
        <input id="register-username" required type="text" placeholder="new username">
        <input id="register-password" required type="password" placeholder="new password">
        <input id="register-email" required type="email" placeholder="e-mail address">
        <input id="doRegistration" type="submit" value="register">
        <p id="cancelRegister">cancel</p>
    </form>
</div>











